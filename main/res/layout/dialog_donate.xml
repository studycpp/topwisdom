<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idGameScrollLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="200dp"
    android:minHeight="200dp"
    tools:visibility="visible">

    <Button
        android:id="@+id/idDialogDonateDonate"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/style_button"
        android:gravity="center"
        android:text="@string/str_donate"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/idDialogDonateInfo"
        app:layout_constraintTop_toBottomOf="@+id/idDialogDonateInfo" />

    <Button
        android:id="@+id/idDialogDonateYes"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="48dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/style_button"
        android:gravity="center"
        android:text="@string/str_yes"
        app:layout_constraintEnd_toEndOf="@+id/idDialogDonateInfo"
        app:layout_constraintTop_toBottomOf="@+id/idDialogDonateInfo" />

    <TextView
        android:id="@+id/idDialogDonateInfo"
        android:layout_width="0dp"
        android:layout_height="207dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:autoSizeTextType="uniform"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idDialogAskDonateIcon" />

    <ImageView
        android:id="@+id/idDialogAskDonateIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/id_svg_warn" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="100dp"
        android:background="@color/green"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idDialogDonateInfo" />

</androidx.constraintlayout.widget.ConstraintLayout>