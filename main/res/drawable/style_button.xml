<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--1、圆角 和 按下后背景变颜色-->
    <item android:state_pressed="false">
        <shape>
            <stroke android:width="5dp" android:color="@color/blue" /><!-- 边框颜色，边框大小-->
            <corners android:radius="100dp" /><!-- android:radius 弧形的半径 -->
        </shape>

    </item>

    <item android:state_pressed="true">
        <shape>
            <stroke android:width="20dp" android:color="@color/red" /><!-- 边框颜色，边框大小-->
            <corners android:radius="100dp" /><!-- android:radius 弧形的半径 -->
        </shape>
    </item>
</selector>

